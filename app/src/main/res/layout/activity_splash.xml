<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97673AB7"
    tools:context="aka.studios.shribalaji.SplashActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mainSplash"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/splash_logo"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/logoText"
        android:layout_above="@+id/logosubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shree Balaji"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"/>

    <TextView
        android:id="@+id/logosubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Misthan Bhandar"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:elevation="5dp"
        android:layout_marginBottom="65dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>